{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
  },
  "include": ["*.config.ts, *.config.js"],
}
